<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnvWinProjectQuizz.MainPage">

    <StackLayout>
        <!-- bandeau + menu burger -->
        <Frame BackgroundColor="#FBFBC6" Padding="24" CornerRadius="0">
            <Label Text="Teste Toi" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
        <!-- encart select élève -->
        <Label Text="Nom de l'élève" FontSize="Title" Padding="30,10,30,10" BackgroundColor="White"/>
        <ListView ItemsSource="{Binding Eleves}" ItemSelected="OnListViewSelected" ItemTapped="OnViewItemTrapped" />
        <Button Text="Test bouton" BackgroundColor="AntiqueWhite" BorderColor="HotPink" TextColor="Red" BorderWidth="5"></Button>
        
        <Grid>
            <!-- rectangles quizz thèmes -->
            <Rectangle Fill="DarkBlue"
           Stroke="Red"
           StrokeThickness="4"
           StrokeDashArray="1,1"
           StrokeDashOffset="6"
           WidthRequest="150"
           HeightRequest="50"
           HorizontalOptions="Start" />
            <!-- footer -->
        </Grid>
    </StackLayout>
</ContentPage>
